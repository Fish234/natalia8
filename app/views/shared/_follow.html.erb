<!-- Follow -->
<% unless current_user.following?(@user) %>
    <%= form_for(current_user.active_relationships.build) do |f| %>
        <div><%= hidden_field_tag :follower_id, @user.id %></div>
        <%= f.submit "Follow", class: "btn btn-primary", style: "color:  #00acee" %>
    <% end %>
<% end %>
